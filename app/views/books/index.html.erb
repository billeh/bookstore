<h1>Listing books</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Unit price</th>
    <th>Quantity on hand</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.description %></td>
    <td><%= book.unit_price %></td>
    <td><%= book.quantity_on_hand %></td>
    <td><%= link_to 'Show', book %></td>
    <% if administrator_signed_in? then %>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if administrator_signed_in? then %>
  <%= link_to 'New Book', new_book_path %>
 <% end %> 
<% if session[:wishlist_id].nil? then %>
  <%= link_to 'Create a wishlist', new_wishlist_path %>
<% else %>
<%= link_to 'Back to wishlist', wishlist_path(session[:wishlist_id]) %>
<% end %>
